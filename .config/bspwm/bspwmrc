#! /bin/sh

# ~/.config/bspwm/bspwmrc
# -------------------------------------
# bspwm configuration file



# startup configs and scripts

xsetroot -cursor_name left_ptr &
setxkbmap -layout "gb,es" -option "grp:shifts_toggle" &

#xrandr --output HDMI-1 --dpi 100 --right-of eDP-1 &
xrandr --output eDP-1 --dpi 200 --primary &

wal -R &

/usr/lib/gnome-settings-daemon/gsd-xsettings &

redshift &

~/.bin/launch_compton &
~/.bin/launch_polybar &

sxhkd &

bspc monitor eDP-1 -d 1 2 3 4 5 6
bspc monitor HDMI-1 -d 7 8 9 0



# config

bspc config border_width            2
bspc config window_gap              34
bspc config split_ratio             0.54
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focus_follows_pointer   true
bspc config click_to_focus          true
bspc config single_monocle          true


. "${HOME}/.cache/wal/colors.sh"

bspc config normal_border_color     "$color0"
bspc config active_border_color     "$color7"
bspc config focused_border_color    "$color15"
bspc config presel_border_color     "$color6"



# rules

bspc rule -a mpv                state=floating
bspc rule -a File-roller        state=floating
bspc rule -a feh                state=floating
#bspc rule -a Google-chrome      desktop=^1

