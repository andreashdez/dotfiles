#! /bin/sh

# autostart
xrdb < ~/.Xresources

sxhkd &
~/.config/polybar/launch_polybar &
~/.config/compton/launch_compton &
feh --bg-fill ~/Pictures/wp.jpg &
/usr/lib/gnome-settings-daemon/gnome-settings-daemon &
xsetroot -cursor_name left_ptr &
setxkbmap -layout "gb,es" -option "grp:shifts_toggle"


bspc monitor -d I II III IV V


# config
bspc config border_width            4
bspc config window_gap              34
bspc config split_ratio             0.54
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focus_follows_pointer   true
bspc config single_monocle          true


bspc config normal_border_color     "#1b2b34"
bspc config active_border_color     "#c0c5ce"
bspc config focused_border_color    "#c0c5ce"
bspc config presel_feedback_color   "#5fb3b3"
bspc config urgent_border_color     "#ec5f67"


# rules
bspc rule -a mpv state=floating
bspc rule -a google-chrome-stable desktop=I

