; .config/polybar/config
; -------------------------------------
; polybar configuration file



[colours]
bg          = #cc000000
sel_bg      = #88000000
white       = #d8dee9
grey        = #c0c5ce
darkgrey    = #65737e
silver      = #a7adba
red         = #ec5f67
yellow      = #fac863
green       = #99c794
cyan        = #5fb3b3



; BAR

[bar/bottom]
monitor = eDP-1
width = 100%
height = 52
bottom = true
fixed-center = true

background = ${colours.bg}
foreground = ${colours.grey}

line-size = 2

module-margin-left = 5
padding = 5

font-0 = Archivo Narrow:size=22;4
font-1 = Noto Emoji:size=20;4
font-2 = FontAwesome:size=20;4

modules-left = bspwm
modules-center =
modules-right = volume backlight keyboard wlan filesystem battery date



; MODULES

[module/bspwm]
type = internal/bspwm
inline-mode = true
enable-scroll = false

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = V;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colours.sel_bg}
label-focused-underline = ${colours.white}
label-focused-padding = 4

label-occupied = %icon%
label-occupied-foreground = ${colours.silver}
label-occupied-underline = ${colours.silver}
label-occupied-padding = 4

label-urgent = %icon%
label-urgent-foreground = ${colours.red}
label-urgent-underline = ${colours.red}
label-urgent-padding = 4

label-empty = %icon%
label-empty-foreground = ${colours.silver}
label-empty-padding = 4

label-monocle = monocle
label-monocle-background = ${colours.sel_bg}
label-monocle-underline = ${colours.white}
label-monocle-padding-right = 4



[module/date]
type = internal/date
interval = 5
date = %a %d %b
time = %H:%M

format = <label>
format-background = ${colours.sel_bg}

label = %date%, %time%
label-underline = ${colours.white}
label-padding = 5



[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M

format-charging = <ramp-capacity>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>

label-charging = %percentage%% (%time%)
label-charging-foreground = ${colours.green}

label-discharging = %percentage%% (%time%)
label-discharging-foreground = ${colours.yellow}

label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 



[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑



[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume = %percentage%%
label-muted = 🔇  -
label-muted-foreground = ${colours.darkgrey}

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊



[module/filesystem]
type = internal/fs
mount-0 = /mnt/ntfs
mount-1 = /
fixed-values = true
spacing = 5

format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted =   %free%
label-unmounted =   -
label-unmounted-foreground = ${colours.darkgrey}



[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected =   %signal%% (%essid%)
label-disconnected =   -
label-disconnected-foreground = ${colours.darkgrey}



[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout =   %layout%

