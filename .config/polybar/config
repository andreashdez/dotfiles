font-2 = FontAwesome:size=20;4

modules-left = i3 bspwm
modules-center =
modules-right = volume backlight keyboard wlan filesystem battery date


; MODULES

[module/i3]
type = internal/i3
wrapping-scroll = false
reverse-scroll = false

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 9;
ws-icon-default = 

label-focused = %icon%
label-focused-background = ${colours.sel_bg}
label-focused-underline = ${colours.white}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-foreground = ${colours.grey}
label-unfocused-padding = 2

label-visible = %icon%
label-visible-foreground = ${colours.grey}
label-visible-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${colours.red}
label-urgent-underline = ${colours.red}
label-urgent-padding = 2


[module/bspwm]
type = internal/bspwm

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = V;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-background = ${colours.sel_bg}
label-focused-underline = ${colours.white}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-background = ${colours.sel_bg}
label-occupied-foreground = ${colours.grey}
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${colours.red}
label-urgent-underline = ${colours.red}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colours.grey}
label-empty-padding = 1

label-monocle = 🔎


[module/date]
type = internal/date
interval = 5
date = %a %d %b,
time = %H:%M

format = <label>
format-background = ${colours.sel_bg}

label = %date% %time%
label-padding = 3


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage%% (%time%)
label-charging-foreground = ${colours.green}
label-discharging = %percentage%% (%time%)
label-discharging-foreground = ${colours.yellow}
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp> <label>
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑


[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume = %percentage%%
label-muted = 🔇 -
label-muted-foreground = ${colours.darkgrey}

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊


[module/filesystem]
type = internal/fs
mount-0 = /mnt/ntfs
mount-1 = /
fixed-values = true

format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted =  %free%
label-unmounted =  -
label-unmounted-foreground = ${colours.darkgrey}


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected =  %signal%%
label-disconnected =  -
label-disconnected-foreground = ${colours.darkgrey}


[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout =  %layout%

