[module/mpd_progress]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-online = <bar-progress> <label-song>

bar-progress-width = 48
bar-progress-indicator = ▒
bar-progress-fill = ▒
bar-progress-empty-foreground = ${color.darkgrey}
bar-progress-empty = ░

label-song-foreground = ${color.darkgrey}
label-song = ┊ %artist% - %title%



[module/date]
type = internal/date
interval = 5
date = %A, %-d
date-alt = %A, %-d of %B
time = %H:%M
time-alt = %H:%M

format = <label>

label = %date% ┊ %time%
label-underline = ${color.white}
label-padding = 5



[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M

format-charging = <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <label-full>

label-charging =   %time% ┊ %percentage%%

label-discharging = %time% ┊ %percentage%%

label-full =   full

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 



[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp>  <label>
label = %percentage%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 



[module/volume]
type = internal/volume

format-volume = <ramp-volume>  <label-volume>
format-muted = <label-muted>

label-volume = %percentage%
label-muted =   %percentage%
label-muted-foreground = ${color.darkgrey}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 



[module/filesystem]
type = internal/fs
mount-0 = /mnt/ntfs
mount-1 = /
fixed-values = true
spacing = 5

format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted =   %free%
label-unmounted =   empty
label-unmounted-foreground = ${color.darkgrey}



[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected = <ramp-signal>  <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid% ┊ %signal%
label-disconnected =   disconnected
label-disconnected-foreground = ${color.darkgrey}

ramp-signal-0 = 
ramp-signal-0-foreground = ${color.darkgrey}
ramp-signal-1 = 
ramp-signal-1-foreground = ${color.darkgrey}
ramp-signal-2 = 



[module/keyboard]
