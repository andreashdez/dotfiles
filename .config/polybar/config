; .config/polybar/config
; -------------------------------------
; polybar configuration file



[c]
bg          = #d7000000
sel_bg      = #88000000
white       = ${xrdb:color15:#d8dee9}
grey        = ${xrdb:color7:#c0c5ce}
darkgrey    = ${xrdb:color8:#65737e}
red         = ${xrdb:color1:#ec5f67}
yellow      = ${xrdb:color3:#fac863}
green       = ${xrdb:color2:#99c794}



; BARS

[bar/bottom]
monitor = eDP-1
width = 100%
height = 52
bottom = true
fixed-center = true

background = ${c.bg}
foreground = ${c.grey}

line-size = 2

module-margin-left = 5
padding-right = 5
padding-left = 4

font-0 = Oswald:size=20;4
font-1 = Noto Emoji:size=14;3
font-2 = FontAwesome:size=14;3

modules-left = bspwm
modules-center =
modules-right = volume backlight keyboard wlan filesystem battery date



[bar/bottom_ext]
monitor = HDMI-1
width = 100%
height = 26
bottom = true
fixed-center = true

background = ${c.bg}
foreground = ${c.grey}

line-size = 2

module-margin-left = 5
padding-right = 5
padding-left = 4

font-0 = Archivo Narrow:size=11;2
font-1 = Noto Emoji:size=8;2
font-2 = FontAwesome:size=8;2

modules-left = bspwm
modules-center =
modules-right = date



; MODULES

[module/bspwm]
type = internal/bspwm
inline-mode = true
enable-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-foreground = ${c.white}
label-focused-background = ${c.sel_bg}
label-focused-underline = ${c.white}
label-focused-padding = 5
label-focused-margin-left = 1

label-occupied = %icon%
label-occupied-foreground = ${c.white}
label-occupied-underline = ${c.white}
label-occupied-padding = 4
label-occupied-margin-left = 1

label-urgent = %icon%
label-urgent-foreground = ${c.red}
label-urgent-underline = ${c.red}
label-urgent-padding = 4
label-urgent-margin-left = 1

label-empty = %icon%
label-empty-foreground = ${c.darkgrey}
label-empty-padding = 4
label-empty-margin-left = 1

label-monocle = monocle
label-monocle-background = ${c.sel_bg}
label-monocle-underline = ${c.white}
label-monocle-padding-right = 5



[module/date]
type = internal/date
interval = 5
date = %A, %-d
date-alt = %A, %-d of %B
time = %H:%M
time-alt = %H:%M

format = <label>
format-background = ${c.sel_bg}

label = %date%  |  %time%
label-underline = ${c.white}
label-padding = 5



[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M

format-charging = <ramp-capacity>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>

label-charging = %percentage%% (%time%)
label-charging-foreground = ${c.green}

label-discharging = %percentage%% (%time%)
label-discharging-foreground = ${c.yellow}

label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 



[module/backlight]
type = internal/backlight
card = intel_backlight

format = <ramp>  <label>
label = %percentage%%

ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑



[module/volume]
type = internal/volume

format-volume = <ramp-volume>  <label-volume>
format-muted = <label-muted>

label-volume = %percentage%%
label-muted = 🔇  %percentage%%
label-muted-foreground = ${c.darkgrey}

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊



[module/filesystem]
type = internal/fs
mount-0 = /mnt/ntfs
mount-1 = /
fixed-values = true
spacing = 5

format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted =   %free%
label-unmounted =   -
label-unmounted-foreground = ${c.darkgrey}



[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected = <ramp-signal>  <label-connected>
format-disconnected = <label-disconnected>

label-connected = %essid%
label-disconnected =   -
label-disconnected-foreground = ${c.darkgrey}

ramp-signal-0 = 
ramp-signal-0-foreground = ${c.red}
ramp-signal-1 = 
ramp-signal-1-foreground = ${c.yellow}
ramp-signal-2 = 



[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout =    %name%

