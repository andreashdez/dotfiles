; .config/polybar/config
; -------------------------------------
; polybar configuration file



[color]
bg-0        = #00000000
bg-1        = #22000000
darkgrey    = ${xrdb:color5}
white       = ${xrdb:color15}



[global/wm]
margin-top = 2



; -------------------------------------
; BARS

[bar/bottom]
monitor      = eDP1
width        = 100%
height       = 64
bottom       = true
fixed-center = true

cursor-click = pointer

foreground   = ${color.white}
background-0 = ${color.bg-0}
background-1 = ${color.bg-1}

line-size    = 2

module-margin-left = 2
padding-right = 3
padding-left = 2

font-0 = Iosevka:size=20;4
font-1 = Material Icons:size=18;6
font-2 = Font Awesome:size=16;4
;font-3 = Noto Emoji:size=14;3

modules-left = bspwm
modules-center =
modules-right = volume backlight wlan filesystem battery date



[bar/bottom_ext]
monitor      = HDMI1
width        = 100%
height       = 32
bottom       = true
fixed-center = true

foreground   = ${color.white}
background-0 = ${color.bg-0}
background-1 = ${color.bg-1}

line-size    = 2

module-margin-left = 2
padding-right = 3
padding-left = 2

font-0 = Iosevka:size=20;4
font-1 = Material Icons:size=18;5
;font-3 = Noto Emoji:size=14;3

modules-left = bspwm
modules-center =
modules-right = date



; -------------------------------------
; MODULES

[module/bspwm]
type = internal/bspwm
inline-mode = true
enable-scroll = false

ws-icon-0       = 1;
ws-icon-1       = 2;
ws-icon-2       = 3;
ws-icon-3       = 4;
ws-icon-4       = 5;
ws-icon-5       = 6;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-foreground = ${color.white}
label-focused-underline = ${color.white}
label-focused-padding = 2
label-focused-margin-left = 1

label-occupied = %icon%
label-occupied-foreground = ${color.white}
label-occupied-padding = 2
label-occupied-margin-left = 1

label-urgent = %icon%
label-urgent-underline = ${color.white}
label-urgent-padding = 2
label-urgent-margin-left = 1

label-empty = %icon%
label-empty-foreground = ${color.darkgrey}
label-empty-padding = 2
label-empty-margin-left = 1

label-monocle = 
label-monocle-underline = ${color.white}
label-monocle-padding-right = 2

label-floating = 
label-floating-underline = ${color.white}
label-floating-padding-right = 2

label-pseudotiled = 
label-pseudotiled-underline = ${color.white}
label-pseudotiled-padding-right = 2

label-locked = 
label-locked-underline = ${color.white}
label-locked-padding-right = 2

label-sticky = 
label-sticky-underline = ${color.white}
label-sticky-padding-right = 2

label-private = 
label-private-underline = ${color.white}
label-private-padding-right = 2



[module/mpd_progress]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-online = <bar-progress> <label-song>

bar-progress-width = 48
bar-progress-indicator = ▒
bar-progress-fill = ▒
bar-progress-empty-foreground = ${color.darkgrey}
bar-progress-empty = ░

label-song-foreground = ${color.darkgrey}
label-song = ┊ %artist% - %title%



[module/date]
type = internal/date
interval = 5
date = %A %e
date-alt = %A %e of %B
time = %H:%M
time-alt = %H:%M

format = <label>

label = %date% ┊ %time%
label-underline = ${color.white}
label-padding = 2



[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
poll-interval = 5
time-format = %H:%M

format-charging = <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>

label-charging =  %time% ┊ %percentage%%

label-discharging = %time% ┊ %percentage%%

label-full =  full

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 



[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label =  %percentage%



[module/volume]
type = internal/volume

format-volume = <label-volume>
;format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume =  %percentage%
label-muted =  %percentage%
label-muted-foreground = ${color.darkgrey}



[module/filesystem]
type = internal/fs
mount-0 = /mnt/ntfs
mount-1 = /
fixed-values = true
spacing = 2

format-mounted = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted =  %free%
label-unmounted =  empty
label-unmounted-foreground = ${color.darkgrey}



[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected =  %essid% ┊ %signal%
label-disconnected =  disconnected
label-disconnected-foreground = ${color.darkgrey}



[module/keyboard]
type = internal/xkeyboard

format = <label-layout>

label-layout =  %name%

